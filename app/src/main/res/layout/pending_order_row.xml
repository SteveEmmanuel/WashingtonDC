<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5">
        <TextView
            android:id="@+id/pendingOrderListNo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="No."/>

        <TextView
            android:id="@+id/pendingOrderListCustomerName"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Name"/>

        <TextView
            android:id="@+id/pendingOrderListCustomerCarName"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Name of Car"/>
        <TextView
            android:id="@+id/pendingOrderListPackageName"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="Package Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Start"
            android:id="@+id/startTask"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Finish"
            android:id="@+id/finishTask"/>
    </LinearLayout>
</LinearLayout>