<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="5"
    android:showDividers="middle"
    android:divider="?android:attr/dividerVertical"
    android:dividerPadding="@dimen/cardview_compat_inset_shadow">
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:columnWidth="150dp"
        android:numColumns="3"
        android:verticalSpacing="20dp"
        android:horizontalSpacing="10dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="3" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="5"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/packageName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="15dp"
                android:text="Time to complete : "
                android:scrollbars="vertical"/>
            <TextView
                android:id="@+id/packageTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="15dp"
                android:text="122"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="15dp"
                android:text="minutes "
                android:scrollbars="vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/packageInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="15dp"
            android:scrollbars="vertical"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:weightSum="3"
           android:layout_margin="3dp"
           android:id="@+id/prices">
                <android.support.v7.widget.CardView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="3dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/hatchCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:clickable="true"
                        android:padding="4dp"
                        android:tag="hatchback">
                           <Button
                               android:id="@+id/packagePrice"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Hatch"
                               android:background="#ffff00"
                               android:layout_weight="1"
                               android:clickable="false"/>
                           <Button
                               android:id="@+id/hatchPrice"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="2500"
                               android:textColor="#ffff00"
                               android:background="#000000"
                               android:layout_weight="1"
                               android:clickable="false"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="3dp"
               android:layout_weight="1">
               <LinearLayout
                   android:id="@+id/suvCard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:weightSum="2"
                   android:clickable="true"
                   android:padding="4dp"
                   android:tag="suv">
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="SUV"
                       android:background="#ffff00"
                       android:layout_weight="1"
                       android:clickable="false"/>
                   <Button
                       android:id="@+id/suvPrice"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2500"
                       android:textColor="#ffff00"
                       android:background="#000000"
                       android:layout_weight="1"
                       android:clickable="false"/>
               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="3dp"
               android:layout_weight="1">
               <LinearLayout
                   android:id="@+id/sedanCard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:weightSum="2"
                   android:clickable="true"
                   android:padding="4dp"
                   android:tag="sedan">
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sedan"
                       android:background="#ffff00"
                       android:layout_weight="1"
                       android:clickable="false"/>
                   <Button
                       android:id="@+id/sedanPrice"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="2500"
                       android:textColor="#ffff00"
                       android:background="#000000"
                       android:layout_weight="1"
                       android:clickable="false"/>
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select"/>
            <Button
                android:id="@+id/selectEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>