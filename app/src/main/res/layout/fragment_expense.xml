<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nist.washintondc.ExpenseDetails"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/expense_card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:longClickable="true"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:padding="10dp">


            <EditText
                android:id="@+id/expenseParticulars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Particulars"
                android:inputType="text"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/expenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Amount"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:inputType="numberDecimal"/>

            <Spinner
                android:id="@+id/expenseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:prompt="@string/expense_spinner_prompt"/>
            <Button
                android:id="@+id/expenseSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="Next"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
